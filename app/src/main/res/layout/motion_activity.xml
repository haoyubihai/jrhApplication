<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


 <com.example.jrhapplication.widgets.ColorfulProgressbar
     android:layout_width="match_parent"
     android:layout_margin="15dp"
     android:id="@+id/cp"
     android:layout_height="20dp"/>
 <com.example.jrhapplication.widgets.MaskProgressView
     android:layout_width="match_parent"
     android:id="@+id/maskView"
     android:layout_below="@+id/cp"
     android:layout_margin="10dp"
     android:layout_height="20dp"/>

 <com.example.jrhapplication.widgets.MoveProgressLayout
     android:id="@+id/moveProgress"
     android:layout_below="@+id/maskView"
     android:layout_width="match_parent"
     android:layout_height="300dp"/>
 <com.example.jrhapplication.widgets.RoundLinearLayout
     android:layout_width="match_parent"
     android:layout_alignTop="@+id/moveProgress"
     android:layout_marginTop="15dp"
     app:rlRadius="15dp"
     app:rlClipBackground="true"
     android:layout_marginLeft="15dp"
     android:background="#ff00f0fd"
     android:layout_marginRight="15dp"
     android:layout_height="270dp"/>

</RelativeLayout>